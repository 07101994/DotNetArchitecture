{
	"compileOnSave": false,
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [ "esnext", "dom" ],
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"outDir": "./dist/out-tsc",
		"pretty": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "esnext",
		"typeRoots": [ "node_modules/@types" ]
	},
	"exclude": [ "node_modules", "typings/main", "typings/main.d.ts" ]
}
